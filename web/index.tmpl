<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <!-- Font-awesome ICONs -->
  <script src="https://kit.fontawesome.com/376c0c6e0b.js" crossorigin="anonymous"></script>

  <title>Gazua</title>
  <style>
    .float-right {
      float: right;
    }

    .rbox {
      width: 2rem;
      height: 2rem;
      border-radius: 30%;
      overflow: hidden;
    }

    .profile {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>

<body>
  <div class="container" style="padding-top: 1rem; padding-bottom: 1rem;">
    {{if not .user}}
    <div class="float-right">
      <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/auth/login/google'">
        <i class="fab fa-google"></i>
      </button>
    </div>
    {{else}}
    <div class="float-right" style="margin-left: 1rem;">
      <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/logout'">
        <i class="fas fa-sign-out-alt"></i>
      </button>
    </div>
    <div class="rbox float-right">
      <img class="profile" src="{{.user.AvatarURL}}">
    </div>
    {{end}}
    <h3>가즈아-</h3>
  </div>

  {{if .user}}
  <div class="container" style="padding-top: 1rem;">
    <table class="table table-striped" style="text-align: center; width: 100%">
      <thead class="thead-light">
        <tr>
          <th scope="col">종목</th>
          <th scope="col">현재가</th>
          <th scope="col">사는데 쓴돈</th>
          <th scope="col">팔아서 번돈</th>
          <th scope="col">보유량<br>보유주식 가치</th>
          <th scope="col">얼마 벌었나</th>
        </tr>
      </thead>
      <tbody>
        {{range $key, $value := .stockMap}}
          <tr style="vertical-align: middle;">
            <td>{{$value.Name}}<br>{{$key}}</td>
            <td>{{$value.CurrentPrice}}</td>
            <td>{{$value.Spent}}</td>
            <td>{{$value.Earned}}</td>
            <td>{{$value.Holdings}}<br>{{$value.Remain}}</td>
            <td>{{$value.Income}}<br>{{printf "%.2f" $value.Yield}}</td>
          </tr>
        {{end}}
        <tr class="table-info">
          <td colspan="2">합계</td>
          <td>{{.sum.Spent}}</td>
          <td>{{.sum.Earned}}</td>
          <td>{{.sum.Remain}}</td>
          <td>{{.sum.Income}}<br>{{printf "%.2f" .sum.Yield}}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="container" style="text-align: right; padding-bottom: 1rem;">
    <button type="button" class="btn btn-primary btn-sm" onclick="location.href=''">
      <i class="fas fa-pen-square"></i>
    </button>
  </div>
  {{else}}
  <div class="container" style="text-align: center; padding-top: 1rem;">
    Please login
  </div>
  {{end}}
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>
</body>

</html>